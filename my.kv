<BL>:
    orientation: "vertical"

    MDToolbar:
        title: 'Youtube 2 Podcast'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'home_screen_nav'
            text: 'Home'
            icon: 'home'

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {"center_x": .5, "center_y": .5}
                MDTextField:
                    id: video_url_textfield
                    size_hint: 0.5, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    helper_text: 'Please copy the YouTube video url here.'
                    helper_text_mode: "persistent"
                    focus: True
                MDTextButton:
                    id: download_btn
                    text: 'Download'
                    pos_hint: {"center_x": .5}
                    on_release: root.download_btn_onclick()

        MDBottomNavigationItem:
            name: 'download_screen_nav'
            text: 'Download'
            icon: 'download'

            BoxLayout:
                ScrollView:
                    MDList:
                        id: download_list

        MDBottomNavigationItem:
            on_tab_release: root.create_podcast_list()
            name: 'podcast_screen_nav'
            text: 'Podcasts'
            icon: 'file-music'

            BoxLayout:
                ScrollView:
                    MDList:
                        id: podcast_list

        MDBottomNavigationItem:
            name: 'play_screen_nav'
            text: 'Playing'
            icon: 'play-circle'

            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: 0.7
                    MDLabel:
                        id: play_screen_podcast_name
                        text: ''
                        theme_text_color: "Primary"
                        font_style: "H4"
                        halign:'center'
                BoxLayout:
                    id: play_screen_slider_layout
                    size_hint_y: 0.05

                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: 0.25
                    MDFloatingActionButton:
                        id: play_screen_play_button
                        icon: 'play-circle-outline'
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: root.play_btn_onclick()



<ListItemWithPercentage>:
    RightLabel:
        id: download_status_progress
