BoxLayout:
    podcast_screen: podcast_screen
    orientation:'vertical'

    MDToolbar:
        title: 'Youtube 2 Podcast'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'home_screen_nav'
            text: 'Home'
            icon: 'home'

            HomeScreen:
                name: 'home_screen'

        MDBottomNavigationItem:
            name: 'download_screen_nav'
            text: 'Download'
            icon: 'download'

            MDLabel:
                text: 'Download'
                halign: 'center'

        MDBottomNavigationItem:
            on_tab_release: podcast_screen.create_list()
            name: 'podcast_screen_nav'
            text: 'Podcasts'
            icon: 'file-music'

            PodcastScreen:
                id: podcast_screen
                name: 'podcast_screen'

        MDBottomNavigationItem:
            name: 'play_screen_nav'
            text: 'Playing'
            icon: 'play-circle'

            MDLabel:
                text: 'Play'
                halign: 'center'

<HomeScreen>
    video_url_textfield: video_url_textfield

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(10)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDTextField:
            id: video_url_textfield
            size_hint: 0.5, None
            pos_hint: {"center_x": .5, "center_y": .5}
            helper_text: 'Please copy the YouTube video url here.'
            helper_text_mode: "persistent"
            focus: True
        MDTextButton:
            id: download_btn
            text: 'Download'
            pos_hint: {"center_x": .5}
            on_release: root.download_btn_onclick()


<PodcastScreen>
    podcast_list: podcast_list
    BoxLayout:
        ScrollView:
            MDList:
                id: podcast_list

